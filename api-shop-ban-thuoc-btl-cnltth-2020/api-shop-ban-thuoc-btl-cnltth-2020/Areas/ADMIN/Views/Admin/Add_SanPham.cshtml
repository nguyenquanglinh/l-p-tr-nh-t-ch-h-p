
@{
    ViewBag.Title = "Add_SanPham";
    Layout = "~/Areas/ADMIN/Views/Shared/_AdmiLayout.cshtml";
}
@using WebAPIBanThuoc.Models
@model IEnumerable<DANHMUC>

<link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/Admin/css/datepicker3.css" rel="stylesheet">
<link href="~/Content/Admin/css/bootstrap-table.css" rel="stylesheet">
<link href="~/Content/Admin/css/styles.css" rel="stylesheet">

<!--Icons-->
<script src="~/Content/Admin/js/lumino.glyphs.js"></script>

<script src="~/Content/Admin/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/Admin/js/bootstrap.min.js"></script>
<script src="~/Content/Admin/js/bootstrap-table.js"></script>
@section dangnhap{
	@Html.Action("_DangNhap")
}
<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
	<form role="search" action="/ADMIN/Admin/TimKiemSP" method="post">
		<div class="form-group">
			<input type="text" name="search" class="form-control" placeholder="Search">
		</div>
	</form>
	<ul class="nav menu">
		<li><a href="/ADMIN/Admin/Index"><svg class="glyph stroked dashboard-dial"><use xlink:href="#stroked-dashboard-dial"></use></svg> Home</a></li>
		<li><a href="/ADMIN/Admin/Users"><svg class="glyph stroked male user "><use xlink:href="#stroked-male-user" /></svg>Quản lý thành viên</a></li>
		<li><a href="/ADMIN/Admin/DanhMuc"><svg class="glyph stroked open folder"><use xlink:href="#stroked-open-folder" /></svg>Quản lý danh mục</a></li>
		<li class="active"><a href="/ADMIN/Admin/SanPham"><svg class="glyph stroked bag"><use xlink:href="#stroked-bag"></use></svg>Quản lý thuốc</a></li>
		<li><a href="/ADMIN/Admin/DonHang"><svg class="glyph stroked two messages"><use xlink:href="#stroked-two-messages" /></svg> Quản lý đơn hàng</a></li>
	</ul>

</div>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="/ADMIN/Admin/SanPham"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
			<li><a href="">Quản lý sản phẩm</a></li>
			<li class="active">Thêm sản phẩm</li>
		</ol>
	</div>
	<!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Thêm sản phẩm</h1>
		</div>
	</div>
	<!--/.row-->
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<form role="form" method="post" enctype="multipart/form-data" action="/ADMIN/Admin/Add_SanPham">
						<div class="col-md-6">

							<div class="form-group">
								<label>Mã thuốc</label>
								<input name="MaSP" class="form-control" placeholder="">
							</div>
							<div class="form-group">
								<label>Tên Thuốc</label>
								<input name="TenSP" class="form-control" placeholder="">
							</div>

							<div class="form-group">
								<label>Công Dụng</label>
								<input name="CongDung" class="form-control" placeholder="">
							</div>
							<div class="form-group">
								<label>Thành Phần</label>
								<input name="ThanhPhan" class="form-control" placeholder="">
							</div>
							<div class="form-group">
								<label>Dạng Thuốc</label>
								<input name="DangThuoc" type="text" class="form-control">
							</div>
							<div class="form-group">
								<label>Liều Lượng</label>
								<input name="LieuLuong" class="form-control" placeholder="">
							</div>
							
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label>Danh Mục</label>
								@*<input name="MaDM" type="text" class="form-control">*@
								<select name="MaDM" class="form-control">
									@foreach (var it in Model)
									{
										<option name="MaDM" value="@it.MaDM">@it.TenDM</option>
									}
								</select>

							</div>
							<div class="form-group">
								<label>Đơn Vị</label>
								<input name="DonVi" type="text" class="form-control">
							</div>
							@*<div class="form-group">
								<label>Số Lượng</label>
								<input name="SoLuongTon" type="number" min="0" class="form-control">
							</div>*@

							<div class="form-group">
								<label>Đơn Giá</label>
								<input name="GiaBan" type="number" min="0" class="form-control">
							</div>
							<div class="form-group">
								<label>Hình ảnh sản phẩm</label>
								<input type="file" name="file">
								<br>
		
							</div>
							<button name="sbm" type="submit" class="btn btn-success">Thêm mới</button>
							<button type="reset" class="btn btn-default">Làm mới</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<!-- /.col-->
	</div>
	<!-- /.row -->

</div>
<!--/.main-->

