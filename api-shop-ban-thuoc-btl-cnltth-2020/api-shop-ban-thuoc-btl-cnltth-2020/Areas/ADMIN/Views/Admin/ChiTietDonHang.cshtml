
@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Areas/ADMIN/Views/Shared/_AdmiLayout.cshtml";
}
@using WebAPIBanThuoc.Models
@model IEnumerable<VIEWCHITIET>

<link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/Admin/css/datepicker3.css" rel="stylesheet">
<link href="~/Content/Admin/css/bootstrap-table.css" rel="stylesheet">
<link href="~/Content/Admin/css/styles.css" rel="stylesheet">

<!--Icons-->
<script src="~/Content/Admin/js/lumino.glyphs.js"></script>

<script src="~/Content/Admin/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/Admin/js/bootstrap.min.js"></script>
<script src="~/Content/Admin/js/bootstrap-table.js"></script>
@section dangnhap{
	@Html.Action("_DangNhap")
}
<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
	<form role="search" action="/ADMIN/Admin/TimKiemDH" method="post">
		<div class="form-group">
			<input type="text" name="search" class="form-control" placeholder="Search">
		</div>
	</form>
	<ul class="nav menu">
		<li><a href="/ADMIN/Admin/Index"><svg class="glyph stroked dashboard-dial"><use xlink:href="#stroked-dashboard-dial"></use></svg> Home</a></li>
		<li><a href="/ADMIN/Admin/Users"><svg class="glyph stroked male user "><use xlink:href="#stroked-male-user" /></svg>Quản lý thành viên</a></li>
		<li><a href="/ADMIN/Admin/DanhMuc"><svg class="glyph stroked open folder"><use xlink:href="#stroked-open-folder" /></svg>Quản lý danh mục</a></li>
		<li><a href="/ADMIN/Admin/SanPham"><svg class="glyph stroked bag"><use xlink:href="#stroked-bag"></use></svg>Quản lý thuốc</a></li>
		<li class="active"><a href="/ADMIN/Admin/DonHang"><svg class="glyph stroked two messages"><use xlink:href="#stroked-two-messages" /></svg> Quản lý đơn hàng</a></li>
	</ul>

</div>
<!--/.sidebar-->

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="/ADMIN/Admin/DonHang"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
			<li class="active">Chi tiết đơn hàng</li>
		</ol>
	</div>
	<!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Đơn hàng: @ViewBag.MaDonHang </h1>
		</div>
	</div>
	<!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
					

					<div class="panel-body">
						<form method="post" action="/ADMIN/Admin/ChiTietDonHang/@ViewBag.MaDonHang">
							<div class="row">
								<div class="col-xs-12 col-md-10">
                                    <select name="TRANGTHAIDONHANG" class="form-control">
                                        <option selected value="@ViewBag.TinhTrang">@ViewBag.TinhTrang</option>
                                        @{
                                            List<TRANGTHAIDONHANG> tt = ViewBag.ttdh;
                                            foreach (var i in tt){
                                                <option value="@i.MaTT">@i.TenTT</option>
                                            }
                                        }
                                    </select>
								</div>

								<div class="col-xs-12 col-md-2">
									<button type="submit" name="sbm" class="btn btn-success">Lưu Trạng Thái</button>
								</div>


							</div>
						</form>
						<table data-toolbar="#toolbar" data-toggle="table">
							
							<thead>
                                <tr>
                                    @*<th data-field="MaDH" data-sortable="true">Mã ĐH</th>*@
                                    <th data-field="MaThuoc" data-sortable="true">Mã Thuốc</th>
                                    <th data-field="TenThuoc" data-sortable="true">Tên Thuốc</th>
                                    <th data-field="SoLuong" data-sortable="true">Số Lượng</th>
                                    <th data-field="DonGia" data-sortable="true">Đơn Giá</th>
                                    <th data-field="DonGia">Thành tiền</th>

                                </tr>
							</thead>
							<tbody>
								@foreach (VIEWCHITIET it in Model)
								{
                                <tr>
                                    @*<td style="">@it.MaDH</td>*@
                                    <td style="">@it.MaSP</td>
                                    <td style="">@it.TenSP</td>
                                    <td style="">@it.SoLuong</td>
                                    <td style="">@it.DonGia</td>
                                    <td style="">@it.ThanhTien</td>

                                </tr>
								}
								
								
							</tbody>
						</table>
					</div>
					<div class="panel-footer">
						<nav aria-label="Page navigation example">
							<ul class="pagination">
								<li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
								<li class="page-item"><a class="page-link" href="#">1</a></li>
								<li class="page-item"><a class="page-link" href="#">2</a></li>
								<li class="page-item"><a class="page-link" href="#">3</a></li>
								<li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
							</ul>
						</nav>
					</div>
</div>
		</div>
	</div>
	<!--/.row-->
</div>
<!--/.main-->

