
@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/ADMIN/Views/Shared/_AdmiLayout.cshtml";
}

@using WebAPIBanThuoc.Models

@model IEnumerable<TAIKHOANQUANTRI>

<link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/Admin/css/datepicker3.css" rel="stylesheet">
<link href="~/Content/Admin/css/bootstrap-table.css" rel="stylesheet">
<link href="~/Content/Admin/css/styles.css" rel="stylesheet">

<!--Icons-->
<script src="~/Content/Admin/js/lumino.glyphs.js"></script>

<script src="~/Content/Admin/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/Admin/js/bootstrap.min.js"></script>
<script src="~/Content/Admin/js/bootstrap-table.js"></script>
@section dangnhap{
    @Html.Action("_DangNhap")
}
<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
    <form role="search" action="/ADMIN/Admin/TimKiemUsers" method="post">
        <div class="form-group">
            <input type="text" name="search" class="form-control" placeholder="Search">
        </div>
    </form>
    <ul class="nav menu">
        <li><a href="/ADMIN/Admin/Index"><svg class="glyph stroked dashboard-dial"><use xlink:href="#stroked-dashboard-dial"></use></svg> Home</a></li>
        <li class="active"><a href="/ADMIN/Admin/Users"><svg class="glyph stroked male user "><use xlink:href="#stroked-male-user" /></svg>Quản lý thành viên</a></li>
        <li><a href="/ADMIN/Admin/DanhMuc"><svg class="glyph stroked open folder"><use xlink:href="#stroked-open-folder" /></svg>Quản lý danh mục</a></li>
        <li><a href="/ADMIN/Admin/SanPham"><svg class="glyph stroked bag"><use xlink:href="#stroked-bag"></use></svg>Quản lý thuốc</a></li>
        <li><a href="/ADMIN/Admin/DonHang"><svg class="glyph stroked two messages"><use xlink:href="#stroked-two-messages" /></svg> Quản lý đơn hàng</a></li>
    </ul>

</div>
<!--/.sidebar-->

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="/ADMIN/Admin/Users"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li class="active">Danh sách thành viên quản trị</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách thành viên quản trị </h1>
        </div>
    </div>
    <!--/.row-->
    <div id="toolbar" class="btn-group">
        <a href="/ADMIN/Admin/Add_User" class="btn btn-success">
            <i class="glyphicon glyphicon-plus"></i> Thêm thành viên
        </a>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    @if (TempData["Alert"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Alert"]</div>
                    }
                    <table data-toolbar="#toolbar" data-toggle="table">

                        <thead>
                            <tr>
                                <th data-field="name" data-sortable="true">Mã tài khoản</th>
                                <th data-sortable="true">Tên</th>
                                <th data-sortable="true">SĐT</th>
                                <th>Quyền</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (TAIKHOANQUANTRI it in Model)
                            {
                            <tr>
                                <td style="">@it.MaQT</td>
                                <td style="">@it.HoTen</td>
                                <td style="">@it.SDT</td>
                                <td>

                                            <span class="label label-danger">@it.ROLE1.RoleName</span>
                                </td>
                                <td class="form-group">
                                    <a href="/ADMIN/Admin/Edit_User/@it.MaQT" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a href="/ADMIN/Admin/Del_User/@it.MaQT" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                                </td>
                            </tr>

                            }



                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!--/.row-->
</div>
<!--/.main-->
